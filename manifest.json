{
  "manifest_version": 3,
  "name": "RDP Chat Control",
  "version": "0.3.1",
  "devtools_page": "devtools.html",

  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["https://chatgpt.com/*", "<all_urls>"],

  "background": {
    "scripts": ["background.js"]     // Use event page in Firefox dev; avoids SW idle issues
  },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["brain.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
